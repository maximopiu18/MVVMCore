<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/blanco</item>
    </style>

    <style name="EditTextHint" parent="AppTheme">
        <item name="android:strokeColor">@color/blanco</item>
        <item name="colorAccent">@color/blanco</item>
        <item name="android:textColorHint">@color/blanco</item>
        <item name="colorControlNormal">@color/blanco</item>
        <item name="colorControlActivated">@color/blanco</item>
        <item name="colorControlHighlight">@color/blanco</item>
        <item name="android:colorControlNormal">@color/blanco</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxBackgroundMode">outline</item>

    </style>
    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/azul_claro</item>
        <item name="android:textColorSecondary">@color/gris</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AlertDialogEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke2</item>
        <item name="boxBackgroundMode">outline</item>

    </style>
    <style name="AlertDialogEditText2" parent="AppTheme">
        <item name="android:strokeColor">@color/gris</item>
        <item name="colorAccent">@color/gris</item>
        <item name="android:textColorHint">@color/gris</item>
        <item name="colorControlNormal">@color/gris</item>
        <item name="colorControlActivated">@color/gris</item>
        <item name="colorControlHighlight">@color/gris</item>
        <item name="android:colorControlNormal">@color/gris</item>
    </style>

</resources>
