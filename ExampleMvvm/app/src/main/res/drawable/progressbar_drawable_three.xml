<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
                android:innerRadiusRatio="2.9"
                android:shape="ring"
                android:thicknessRatio="20.0"
                android:useLevel="true">


            <gradient
                    android:centerColor="#999999"
                    android:endColor="#999999"
                    android:startColor="#999999"
                    android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
                android:fromDegrees="270"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="270">

            <shape
                    android:innerRadiusRatio="2.9"
                    android:shape="ring"
                    android:thicknessRatio="20.0"
                    android:useLevel="true">

                <rotate
                        android:fromDegrees="0"
                        android:pivotX="50%"
                        android:pivotY="50%"
                        android:toDegrees="360" />

                <gradient
                        android:centerColor="@color/azul_fuerte2"
                        android:endColor="@color/azul_fuerte2"
                        android:startColor="@color/azul_fuerte2"
                        android:type="sweep" />
                <stroke
                        android:width="3dp"
                    android:color="@color/azul_fuerte2"
                />


            </shape>
        </rotate>
    </item>
</layer-list>