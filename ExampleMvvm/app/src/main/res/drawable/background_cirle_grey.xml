<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners
                    android:radius="20dp"></corners>
            <gradient
                    android:startColor="@color/gris_claro"
                    android:centerColor="@color/gris_claro"
                    android:endColor="@color/gris_claro"
                    android:angle="270"

            />

            <stroke
                    android:width="2dp"
                    android:color="@color/gris_claro"
            ></stroke>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <corners
                android:radius="20dp"></corners>
            <gradient
                    android:startColor="@color/gris_claro"
                    android:centerColor="@color/gris_claro"
                    android:endColor="@color/gris_claro"
                    android:angle="270"

            />

            <stroke
                    android:width="2dp"
                    android:color="@color/gris_claro"
            ></stroke>
        </shape>
    </item>
</selector>